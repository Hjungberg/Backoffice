<header id="header">
    <form class="search-form"
          method="get"
          asp-contoller=""
          asp-action=""
          novalidate>
        <i class="fa-solid fa-magnifying-glass"></i>
        <input type="search"
               class="form-search-input"
               placeholder="Search anything..." />
    </form>
    <!-- notification -->
    <div id="notification-container">
        <button type="button"
                data-type="dropdown"
                data-target="#notification-dropdown"
                class="btn-notification">
            <i class="dot dot-red fa-solid fa-circle hide"></i>
            <i class="fa-duotone fa-solid fa-bell"
               style="--fa-primary-opacity: 0.4; --fa-secondary-opacity: 1"></i>
        </button>
        <div id="notification-dropdown" class="dropdown">
            <div class="dropdown-header">
                <h4>Notification</h4>
            </div>
        </div>
    </div>
    <!-- account -->
    <div id="account-container">
        <button type="button"
                data-type="dropdown"
                data-target="#account-dropdown"
                class="btn-account">
            <img src="images/profile-template-male.svg" alt="avatar" />
        </button>
        <div id="account-dropdown" class="dropdown">
            <div class="dropdown-header">
                <div class="account-name">
                    <img src="images/profile-template-male.svg" alt="avatar" />
                    <span>Henrik Jungberg</span>
                </div>
            </div>
            <div class="dropdown-body">
                <div></div>
                <div class="or-divider"></div>
                <a href="" class="dropdown-action">
                    <i class="fa-duotone fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </div>
</header>